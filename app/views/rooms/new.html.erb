<h3>新規登録</h3>

<%= form_with model: @room do |f| %>
  <div>
    <label>施設名</label>
    <%= f.text_field :name %>
  </div>
  <div>
    <label>施設詳細</label>
    <%= f.text_area :detail %>
  </div>
  <div>
    <label>料金</label>
    <%= f.number_field :charge %>
  </div>
  <div>
    <label>住所</label>
    <%= f.text_field :address %>
  </div>
  <div>
    <label>施設画像</label>
    <%= f.file_field :hotel_image %>
  </div>
  <%= f.hidden_field :user_id, value: @user %>

  <div>
    <ul>
      <li><%= f.submit "保存" %></li>
      <li><%= link_to "キャンセル", :back %></li>
    </ul>
  </div>
<% end %>