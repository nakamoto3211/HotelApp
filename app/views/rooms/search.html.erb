<h1><%= @search %></h1>
<div>
  <%= form_with(url: search_rooms_path, local: true, method: :get) do |f| %>
    <%= f.text_field :area, placeholder: "エリア名を入力" %>
    <%= f.text_field :keyword, placeholder: "キーワード名を入力" %>
    <%= f.submit "検索" %>
  <% end %>
</div>

<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>

<h3>~件が見つかりました。</h3>

<div>
  <div>
    <% @rooms.each do |room| %>
      <% if room.hotel_image? %>
        <%= image_tag room.hotel_image.url, :size => '350x210' %>
      <% else %>
        <%= image_tag "default_hotel.png", :size => '350x210' %>
      <% end %>
      <%= room.hotel_image %>
      <%= room.name %>
      <%= room.address %>
      <%= room.detail %>
      <%= room.charge %>
      <%= link_to "詳細はこちら", room %>
    <% end %>
  </div>
</div>

