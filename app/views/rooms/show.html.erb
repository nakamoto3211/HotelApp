<h3><%= link_to "戻る", :back %></h3>

<div>
  <% if @room.hotel_image? %>
    <%= image_tag @room.hotel_image.url, :size => '400x260' %>
  <% else %>
    <%= image_tag "default_hotel.png", :size => '400x260' %>
  <% end %>
  <div>
    <%= @room.name %>
    <%= @room.charge %>
    <%= @room.address %>
    <%= @room.detail %>
    <div>
      <%= form_with model: @reservation, url: confilm_reservations_path(@reservation) do |f| %>
        <div>
          <%= f.label :check_in, "チェックイン" %>
          <%= f.date_field :check_in %>
        </div>
        <div>
          <%= f.label :check_out, "チェックアウト" %>
          <%= f.date_field :check_out %>
        </div>
        <div>
          <%= f.label :number_of_people, "人数" %>
          <%= f.number_field :number_of_people %>
        </div>

        <%= f.hidden_field :user_id, value: @user %>
        <%= f.hidden_field :room_id, value: @room.id %>

        <%= f.submit "予約する"%>
      <% end %>
    </div>
  </div>
</div>