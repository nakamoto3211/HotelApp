<div class="Show_Edit_Main">
  <div class="Show_Edit_Header">
    <h3>プロフィール</h3>
  </div>
  <%= form_with model: @user do |f| %>
    <div>
      <label>アイコン画像</label>
      <%= image_tag current_user.icon_image.url, :size => '70x70' %>
      <%= f.file_field :icon_image %>
    </div>
    <div>
      <label>名前</label>
      <%= f.text_field :name %>
    </div>

    <div>
      <ul>
        <li><%= link_to "キャンセル", :back %></li>
        <li><%= f.submit "保存" %></li>
      </ul>
    </div>
  <% end %>
</div>
