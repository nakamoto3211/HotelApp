<div class="Show_Edit_Main">
  <div class="Show_Edit_Header">
    <h3>プロフィール</h3>
  </div>
  <%= form_with model: @user do |f| %>
    <div>
      <label>アイコン画像</label>
      <% if @user.icon_image? %>
        <%= image_tag @user.icon_image.url, :size => '70x70', class:"user_icon" %>
      <% else %>
        <%= image_tag "default.png" , :size => '70x70' %>
      <% end %>
      <%= f.file_field :icon_image %>
    </div>
    <div>
      <label>名前</label>
      <%= f.text_field :name %>
    </div>

    <div>
      <ul>
        <li><%= f.submit "保存" %></li>
        <li><%= link_to "キャンセル", :back %></li>
      </ul>
    </div>
  <% end %>
</div>
